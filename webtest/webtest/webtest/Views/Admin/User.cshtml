    <div id="addBox">
        <div class="title">Add a new User</div>
        @{
            using (Html.BeginForm("User", "Admin", FormMethod.Get))
            {
                <div id="add">
                    <input type="text" name="Name" placeholder="Name" class="inputField" /><br />
                    <input type="text" name="Surname" placeholder="Surname" class="inputField" /><br />
                    <input type="text" name="Email" placeholder="Email" class="inputField" /><br />
                    <input type="text" name="Phone_number" placeholder="Phone_number" class="inputField" /><br />
                    <input type="text" name="Password" placeholder="Password" class="inputField" /><br />
                    <input type="text" name="ConfirmPassword" placeholder="ConfirmPassword" class="inputField" /><br />
                    <select id="Type" , class="dropdownFilters inputField">
                        <option>Select Type</option>
                        <option value="true"> true</option>
                        <option value="false"> false</option>
                    </select><br />
                    <select id="EmailVerified" , class="dropdownFilters inputField">
                        <option>Select Email Verified</option>
                        <option value="true"> true</option>
                        <option value="false"> false</option>
                    </select><br />

                    <input id="TypeInput" type="text" name="Type" , style="display:none">
                    <input id="EmailVerifiedInput" type="text" name="EmailVerified" , style="display:none">
                    <input type="hidden" name="add" value="true" />

                    <button class="btn" , onclick="setType()">Save new product</button>

                </div>
            }
        }
    </div>
</div>

<script>
    function setType() {
        //SET CATEGORIE
        var Type = document.getElementById("Type");
        document.getElementById("TypeInput").value = Type.options[Type.selectedIndex].value;

        var EmailVerified = document.getElementById("EmailVerified");
        document.getElementById("EmailVerifiedInput").value = EmailVerified.options[EmailVerified.selectedIndex].value;
    }
</script>